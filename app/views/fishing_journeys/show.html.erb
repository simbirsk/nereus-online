<%- model_class = FishingJourney -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:date) %>:</strong></dt>
  <dd><%= @fishing_journey.date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:wind_direction) %>:</strong></dt>
  <dd><%= @fishing_journey.wind_direction %></dd>
  <dt><strong><%= model_class.human_attribute_name(:wind_force) %>:</strong></dt>
  <dd><%= @fishing_journey.wind_force %></dd>
  <dt><strong><%= model_class.human_attribute_name(:weather_id) %>:</strong></dt>
  <dd><%= @fishing_journey.weather_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:temperature) %>:</strong></dt>
  <dd><%= @fishing_journey.temperature %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pressure) %>:</strong></dt>
  <dd><%= @fishing_journey.pressure %></dd>
  <dt><strong><%= model_class.human_attribute_name(:swell) %>:</strong></dt>
  <dd><%= @fishing_journey.swell %></dd>
</dl>
<h3>
  Catches
</h3>
<ul>
  <% for catch in @fishing_journey.catches %>
        <li>
          <%= catch.datetime %>
        </li>
  <% end %>
</ul>


<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              fishing_journeys_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_fishing_journey_path(@fishing_journey), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              fishing_journey_path(@fishing_journey),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
