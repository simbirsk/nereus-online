<%- model_class = Session -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:date) %>:</strong></dt>
  <dd><%= @session.date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:wind_direction) %>:</strong></dt>
  <dd><%= @session.wind_direction %></dd>
  <dt><strong><%= model_class.human_attribute_name(:wind_force) %>:</strong></dt>
  <dd><%= @session.wind_force %></dd>
  <dt><strong><%= model_class.human_attribute_name(:weather_id) %>:</strong></dt>
  <dd><%= @session.weather_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:temperature) %>:</strong></dt>
  <dd><%= @session.temperature %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pressure) %>:</strong></dt>
  <dd><%= @session.pressure %></dd>
  <dt><strong><%= model_class.human_attribute_name(:swell) %>:</strong></dt>
  <dd><%= @session.swell %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              sessions_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_session_path(@session), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              session_path(@session),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
