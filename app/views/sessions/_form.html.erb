<%= form_for @session, :html => { :class => 'form-horizontal' } do |f| %>
    <div class="row">
      <div class="span6">
        <div class="control-group">
          <%= f.label :date, :class => 'control-label' %>
          <div class="controls">
            <%= f.date_select :date, :class => 'date_select' %>
          </div>
        </div>
        <fieldset>
          <legend>
            Weather
          </legend>
          <div class="control-group">
            <%= f.label :wind_direction, :class => 'control-label' %>
            <div class="controls">
              <%= f.number_field :wind_direction, :class => 'number_field' %>
            </div>
          </div>
          <div class="control-group">
            <%= f.label :wind_force, :class => 'control-label' %>
            <div class="controls">
              <%= f.number_field :wind_force, :class => 'number_field' %>
            </div>
          </div>
          <div class="control-group">
            <%= f.label :weather_id, :class => 'control-label' %>
            <div class="controls">
              <%= select(:unit, :weather_id, Weather.all.collect {|weather| [weather.name,weather.id,]}) %>
            </div>
          </div>
          <div class="control-group">
            <%= f.label :temperature, :class => 'control-label' %>
            <div class="controls">
              <%= f.number_field :temperature, :class => 'number_field' %>
            </div>
          </div>
          <div class="control-group">
            <%= f.label :pressure, :class => 'control-label' %>
            <div class="controls">
              <%= f.number_field :pressure, :class => 'number_field' %>
            </div>
          </div>
        </fieldset>

        <fieldset>
          <legend>
            Sea
          </legend>
          <div class="control-group">
            <%= f.label :swell, :class => 'control-label' %>
            <div class="controls">
              <%= f.number_field :swell, :class => 'number_field' %>
            </div>
          </div>
        </fieldset>

      </div>
    </div>
    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  sessions_path, :class => 'btn' %>
    </div>
<% end %>
