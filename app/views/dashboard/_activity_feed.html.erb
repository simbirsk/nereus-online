<table class="table table-bordered table-striped table-condensed">
  <caption>Activity log</caption>
  <tbody>
  <% @activities.each do |activity| %>
      <tr>
        <td>
          <%= activity.datetime %>
          <% if activity.kind_of? Catch %>
          Caught a <%= link_to activity.species.name.downcase, species_path(activity.species) %>
          <% elsif activity.kind_of? FishingJourney %>
          Gone fishing
          <% end %>
          <%= time_ago_in_words(activity.datetime) %> ago.
        </td>
      </tr>
  <% end %>
  </tbody>
  <tfoot>
  <tr>
    <th colspan="2">
      <%= link_to 'View all the journeys', fishing_journeys_path %>
      <%= link_to 'Log new journey', new_fishing_journey_path %>
    </th>
  </tr>
  </tfoot>
</table>