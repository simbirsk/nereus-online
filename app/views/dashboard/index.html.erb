<h1>Dashboard</h1>
<div class="row">
  <div class="span6">
    <div class="row">
      <div class="span6">
        <span>
          Catches map
        </span>
      </div>
    </div>
    <div class="row">
      <div class="span6">
        <table class="table table-bordered table-striped table-condensed">
          <caption>Activity log</caption>
          <thead>
          <tr>
            <th>When</th>
            <th>What</th>
          </tr>
          </thead>
          <tbody>
          <% @activities.each do |activity| %>
              <tr>
                <td><%= activity.datetime %></td>
                <td><%= activity.message %></td>
              </tr>
          <% end %>
          </tbody>
          <tfoot>
          <tr>
            <th colspan="2">
              <%= link_to 'View all the journeys', fishing_journeys_path %>
              <%= link_to 'Log new journey', new_fishing_journey_path %>
            </th>
          </tr>
          </tfoot>
        </table>
      </div>
    </div>
  </div>
  <div class="span6">
    <span>
      Statistics
    </span>
    <canvas id="myChart" width="400" height="400"></canvas>
  </div>
</div>
