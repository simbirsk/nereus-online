<%= form_for resource, :as => resource_name, :url => registration_path(resource_name), html: {class: 'form-horizontal'} do |f| %>
    <fieldset>
      <legend>
        Sign up
      </legend>
      <%= devise_error_messages! %>

      <div class="control-group">
        <%= f.label :email, class: 'control-label' %>
        <div class="controls">
          <%= f.email_field :email, :autofocus => true, class: 'input-xlarge' %>
          <p class="help-block">We will send an activation message to this address</p>
        </div>
      </div>

      <div class="control-group">

        <%= f.label :password, class: 'control-label' %>
        <div class="controls">
          <%= f.password_field :password, :autofocus => true, class: 'input-xlarge' %>
          <p class="help-block">Password should be at least 8 characters</p>
        </div>
      </div>

      <div class="control-group">

        <%= f.label :password_confirmation, class: 'control-label' %>
        <div class="controls">
          <%= f.password_field :password_confirmation, :autofocus => true, class: 'input-xlarge' %>
          <p class="help-block">Please confirm password</p>
        </div>
      </div>

      <div class="control-group">
        <div class="controls">
          <%= f.submit "Sign up", class: 'btn btn_sucess' %>
        </div>
      </div>
    </fieldset>
<% end %>

<%= render "devise/shared/links" %>
